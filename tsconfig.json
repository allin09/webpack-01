{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": false, // 是否隐式使用any,为 true 时，进行强类型检查,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "img/*": ["src/assets/img/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
